    "dayjs": "^1.11.1",
    "fs-extra": "^10.1.0",
    "html-minifier": "^4.0.0",
    "ioredis": "^5.0.4",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-csrf": "^3.0.6",
    "koa-is-json": "^1.0.0",
    "koa-json": "^2.0.2",
    "koa-session": "^6.2.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "koa-xml-body": "^2.2.0",
    "log4js": "^6.4.6",
    "lru-cache": "^7.8.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.4",
    "nunjucks": "^3.2.3",
