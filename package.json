      "config/",
      "test/__mocks__/"
    ]
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.0.1",
    "nodemon": "^1.17.3",
    "prettier": "^2.6.2",
    "supertest": "^3.0.0"
  }
}
